<UserControl x:Class="MainHelper.UserControlProject.UserControlTask.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MainHelper.UserControlProject.UserControlTask"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="974">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Text="Task"  Foreground="#607D8B" Margin="5 7" FontSize="20"  FontWeight="Bold" FontFamily="Yu Gothic" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel >
                    <Button Margin="5 5 5 1" HorizontalContentAlignment="Left" Background="#141A21"  Style="{StaticResource MaterialDesignFlatButton}" >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarText" VerticalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="All" FontSize="14" FontWeight="Thin" Margin="5 0 0 0 "  Foreground="White" />
                            <TextBlock Text="24" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="2"/>
                        </StackPanel>
                    </Button>
                    <Button Margin="5 1" HorizontalContentAlignment="Left" Background="#141A21" Style="{StaticResource MaterialDesignFlatButton}"  >
                        <StackPanel Orientation="Horizontal"  >
                            <materialDesign:PackIcon Kind="CalendarToday" VerticalAlignment="Center"  Foreground="White" />
                            <TextBlock Text="Today" FontSize="14"  FontWeight="Thin" Margin="5 0 0 0 "  Foreground="White"  />
                            <TextBlock Text="2" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="2"/>
                        </StackPanel>
                    </Button>
                    <Button Margin="5 1 5 5" HorizontalContentAlignment="Left" Background="#141A21" Style="{StaticResource MaterialDesignFlatButton}"  >
                        <StackPanel Orientation="Horizontal"  >
                            <materialDesign:PackIcon Kind="CalendarWeek" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="Next 7 days" FontSize="14"  FontWeight="Thin" Margin="5 0 0 0 " Foreground="White" />
                            <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="2"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Separator/>
                <TextBlock Text="Category" Foreground="White" FontSize="15" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Yu Gothic" />
                <Separator/>
                <StackPanel>
                    <StackPanel>
                        <ListView >
                            <ListViewItem >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="5,10" Foreground="DarkRed" Kind="CheckboxBlankCircle"  VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" Text="Work" FontFamily="Yu Gothic" FontSize="14"/>
                                    <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="0 0 0 10"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <ListView>
                            <ListViewItem >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="5,10" Foreground="DarkCyan" Kind="CheckboxBlankCircle"  VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" Text="Famile" FontFamily="Yu Gothic" FontSize="14"/>
                                    <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="0 0 0 10"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <ListView>
                            <ListViewItem  >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="5,10" Foreground="DarkGoldenrod" Kind="CheckboxBlankCircle"  VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" Text="Friends" FontFamily="Yu Gothic" FontSize="14"/>
                                    <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="0 0 0 10"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <ListView>
                            <ListViewItem  >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="5,10" Foreground="DarkGray" Kind="CheckboxBlankCircle"  VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" Text="Money" FontFamily="Yu Gothic" FontSize="14"/>
                                    <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="0 0 0 10"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <ListView>
                            <ListViewItem  >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="5,10" Foreground="DarkKhaki" Kind="CheckboxBlankCircle"  VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" Text="Study" FontFamily="Yu Gothic" FontSize="14"/>
                                    <TextBlock Text="22" FontSize="5" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Margin="0 0 0 10"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Column="1" Background="Black" Margin="0 0 5 10">
                <StackPanel Orientation="Horizontal" Margin="20 6" Height="30" VerticalAlignment="Top">
                    <TextBlock Text="Today" FontSize="22" Foreground="White"  FontWeight="Thin" FontFamily="Microsoft YaHei UI" VerticalAlignment="Bottom"  />
                    <TextBlock Text="18.06.20" FontSize="12" Foreground="Gray"  FontWeight="DemiBold" FontFamily="Calibri" VerticalAlignment="Bottom" Margin="10 0 0 2 "  />
                    <Button   Background="Black"  Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Bottom" Margin="550 0 0 0" >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Add" VerticalAlignment="Center" Height="25" Width="25"  Foreground="DarkRed"/>
                            <TextBlock Text="Add task" FontSize="18" FontWeight="Light" Margin="5 0 0 0 "  Foreground="White" />
                        </StackPanel>
                    </Button>
                </StackPanel>
               
            </Grid>
        </Grid>
    </Grid>
</UserControl>
