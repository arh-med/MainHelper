                                        </Paragraph>
                                    </ListItem>
                                </List>
                            </FlowDocument>
                        </FlowDocumentReader>
                    </StackPanel>
                    <!--Список поиска по метки-->
                    <StackPanel Width="100">
                        <ListView>
                            <ListViewItem>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Headline"  />
                                    <Separator/>
                                    <TextBlock Text="27.06.2020" FontSize="12"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Headline"  />
                                    <Separator/>
                                    <TextBlock Text="27.06.2020" FontSize="12"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Headline"  />
                                    <Separator/>
                                    <TextBlock Text="27.06.2020" FontSize="12"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Headline"  />
                                    <Separator/>
