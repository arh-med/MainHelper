                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <Button x:Name="ClosePanelListLabelButton"  ToolTip="Hide"  Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"  >
                            <materialDesign:PackIcon Kind="ChevronDoubleRight" VerticalAlignment="Center" Foreground="#898989" Width="18" Height="18" />
